    <!-- Activity labels -->
    <string name="activity_main">Main Activity</string>
    <string name="activity_your_new">Your New Activity</string>

    <!-- Selected date label -->
    <string name="selected_date_label">Selected Date: %1$s</string>

    <!-- Attendance status labels -->
    <string name="attendance_status_label">Status: %1$s</string>
    <string name="attendance_status_present">Present</string>
    <string name="attendance_status_absent">Absent</string>
